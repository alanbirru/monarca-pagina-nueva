---
import Logo from '../images/monarca-logo-blanco.png';
import Image from 'astro/components/Image.astro';

import { Astronav, MenuItems, MenuIcon } from 'astro-navbar';
const navItems = [
  { title: 'INICIO', id: '#inicio', colored: false },
  { title: 'PROYECTO', id: '#proyecto', colored: false },
  { title: 'INVERSIÓN', id: '#inversion', colored: false },
  { title: 'AMENIDADES', id: '#amenidades', colored: false },
  { title: ' UBICACIÓN', id: '#ubicacion', colored: false },
  { title: 'CONTACTO', id: '#contacto', colored: false },
];
---

<header
  class='xl:flex justify-between gap-5 bg-primary w-full shadow-2xl items-center p-7 xl:p-9 overflow-hidden top-0 z-50 fixed'
>
  <Astronav closeOnClick>
    <div class='flex w-full lg:w-auto justify-between'>
      <a href='/' class='w-36 ml-1 xl:ml-8 xl:w-48'>
        <Image src={Logo} loading='eager' alt='Logo' />
      </a>
      <div class='flex xl:hidden justify-center items-center'>
        <MenuIcon class='w-7 h-7 text-white' />
      </div>
    </div>
    <MenuItems class='hidden xl:flex'>
      <ul
        class='flex flex-col xl:flex-row lg:gap-9 justify-center items-center text-center gap-4 xl:text-lg text-base mt-8 xl:mt-0'
      >
        {
          navItems.map((item) => (
            <li class='text-white hover:text-[#ffffffa6]  transition-all hover:scale-105 font-bold'>
              <a href={item.id}>{item.title}</a>
            </li>
          ))
        }
      </ul>

      <a target='_blank' href='https://wa.link/tc116i'>
        <button
          class='text-white transition-all hover:scale-105 p-3 xl:p-3 bg-secondary rounded-md flex gap-2 shadow-sm hover:shadow-lg mx-auto mt-6 xl:mt-0 xl:ml-9'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='24'
            height='24'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp'
            ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
              d='M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9'></path><path
              d='M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1'
            ></path></svg
          >
          <span>¡CONTÁCTANOS!</span>
        </button>
      </a>
    </MenuItems>
  </Astronav>
</header>
