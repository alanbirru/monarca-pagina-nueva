<div class='bg-[#5f5b4e]'>
  <div
    class='image-container w-full sm:h-[80vh] h-[65vh] sm:min-h-[800px] min-h-[400px] animate-fade animate-once animate-ease-out'
  >
  </div>
</div>

<style>
  .image-container {
    position: relative;
    background-image: url('/src/images/imgprueba2.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    overflow: hidden;
    transition: filter 0.5s ease;
  }

  .image-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #b5a997; /* Initial color */
    mix-blend-mode: multiply;
    transition: background-color 0.5s ease; /* Add transition effect */
  }

  .bg-color-change::before {
    background-color: rgb(225, 225, 225); /* Updated color */
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    var imageContainer = document.querySelector('.image-container');

    // Initially set the background color to white
    imageContainer.classList.add('bg-color-change');

    window.addEventListener('scroll', function () {
      var scrollPosition = window.scrollY;

      // Toggle class based on scroll position
      if (scrollPosition === 0) {
        imageContainer.classList.add('bg-color-change');
      } else {
        imageContainer.classList.remove('bg-color-change');
      }
    });
  });
</script>
