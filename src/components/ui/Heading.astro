---
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  className?: string;
}

const { level, className = '' } = Astro.props;
const Tag = `h${level}` as keyof HTMLElementTagNameMap;
const sizes = {
  1: 'text-4xl sm:text-4xl md:text-5xl lg:text-7xl xl:text-7xl ',
  2: 'text-2xl sm:text-2xl md:text-3xl lg:text-5xl xl:text-5xl  font-[vicecitylight]',
  3: 'text-xl sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold font-[vicecitylight]',
  4: 'text-lg sm:text-lg md:text-2xl lg:text-3xl xl:text-3xl font-bold font-[vicecitylight]',
  5: 'text-base sm:text-base md:text-xl lg:text-2xl xl:text-2xl font-bold',
  6: 'text-sm sm:text-sm md:text-lg lg:text-xl xl:text-xl font-bold',
};
---

<Tag class={`${sizes[level]} ${className}`}>
  <slot />
</Tag>
