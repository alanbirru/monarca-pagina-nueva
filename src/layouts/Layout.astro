---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ScrollTopButton from '../components/ui/ScrollTopButton.astro';
import WhatsUpBtn from '../components/ui/WhatsUpBtn.astro';
import PopUp from '../components/ui/PopUp.astro';

import Image from 'astro/components/Image.astro';
import logoNaranja from '../images/monarcanaranja.png';
---

<!doctype html>
<html lang='en'>
  <head>
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta property='og:locale' content='es_ES' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='Monarca Residencial' />
    <meta property='og:url' content='https://monarcaresidencial.com.mx' />
    <meta property='og:image:type' content='image/png' />
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />

    <link rel='shortcut icon' type='icon' href='favicon.ico' />

    <title>{title}</title>
  </head>
  <body class='xl:pt-[120px] pt-[80.96px]'>
    <div
      id='preloader'
      class='z-[1000] w-full h-[100vh] bg-white fixed flex justify-center items-center'
    >
      <div
        class='animate-pulse animate-infinite animate-duration-[1500ms] animate-ease-in-out sm:w-[400px] w-[200px]'
      >
        <Image src={logoNaranja} loading='eager' alt='Logo' />
      </div>
    </div>

    <Navbar />
    <slot />
    <Footer />
    <ScrollTopButton />
    <WhatsUpBtn />
    <PopUp />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'Momcakebold';
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src: url(/fonts/momcake-bold-webfont.woff2) format('woff2');
  }

  @font-face {
    font-family: 'Momcakethin';
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src: url(/fonts/momcake-thin-webfont.woff2) format('woff2');
  }

  @font-face {
    font-family: 'Vicecitybold';
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src: url(/fonts/vicecitysans-bold-webfont.woff2) format('woff2');
  }

  @font-face {
    font-family: 'Vicecitylight';
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src: url(/fonts/vicecitysans-light-webfont.woff2) format('woff2');
  }

  body {
    background-color: #fff6f7;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  html {
    font-family: vicecitylight;
    scroll-behavior: smooth;
    scroll-padding: 10rem;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: vicecitybold;
    text-wrap: balance;
  }

  p {
    font-size: 20px;
    text-wrap: pretty;
    color: #4f4f4ff8;
    line-height: 1.8;
    font-weight: bold;
  }

  @media screen and (max-width: 1000px) {
    p {
      font-size: 16px; /* Adjusted font size for smaller screens */
    }
  }
</style>

<script>
  // import function to register Swiper custom elements
  import { register } from 'swiper/element/bundle';

  // register Swiper custom elements
  register();
</script>

<script is:inline>
  let loader = document.getElementById('preloader');

  window.addEventListener('load', function () {
    loader.style.display = 'none';
  });
</script>
